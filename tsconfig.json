{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowJs": true,
    "typeRoots" : [
      "./site/public/ts/utils/typings",
      "node_modules/@types" // path to your typings directory (relative to tsconfig.json)
    ],
    "baseUrl": ".",
    "paths": {
        "Vector": ["app/core/ts/utils/math/Vector"],
        "math/*": ["app/core/ts/utils/math/*"],
        "core/utils/*": ["app/core/ts/utils/*"],
        "digital/*": ["app/digital/ts/*"],
        "analog/*": ["app/analog/ts/*"]
    }

  },
  "exclude": [
    "node_modules"
  ]
}
